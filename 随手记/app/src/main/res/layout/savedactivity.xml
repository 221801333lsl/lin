<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:background="#f0f0f0"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="随手记"
        android:textColor="#050505"
        android:textSize="20dp"></TextView>
    <TextView
        android:id="@+id/savedtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#C2C1C1"></TextView>
    <TextView
        android:id="@+id/savedlocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#C2C1C1"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:paddingLeft="3dp"
            android:text="标题:"
            android:textColor="#6D6565"
            android:textSize="20dp"></TextView>
        <TextView
            android:id="@+id/savedtitle"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:textSize="20dp"
            android:layout_height="30dp"
            android:padding="0dp"></TextView>
    </LinearLayout>
    <TextView
        android:id="@+id/TextView04"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#5D5D5F"
        android:text="TextView" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/savedcontent"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>